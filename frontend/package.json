{
    "name": "re-start",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build --outDir dist/firefox",
        "build:firefox": "vite build --outDir dist/firefox",
        "build:chrome": "vite build --outDir dist/chrome && node scripts/build-manifest.js chrome dist/chrome",
        "watch": "vite build --outDir dist/firefox --watch",
        "preview": "vite preview",
        "test": "vitest run",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "format": "prettier --write src/",
        "format:check": "prettier --check src/"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@sveltejs/vite-plugin-svelte-inspector": "^5.0.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.13.1",
        "globals": "^16.5.0",
        "prettier": "^3.7.4",
        "prettier-plugin-svelte": "^3.4.1",
        "svelte": "^5.39.11",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.51.0",
        "vite": "^7.1.9",
        "vitest": "^1.6.1"
    },
    "dependencies": {
        "@fontsource-variable/geist-mono": "^5.2.7",
        "lucide-svelte": "^0.562.0"
    }
}
